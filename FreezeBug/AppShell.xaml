<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FreezeBug.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FreezeBug"
    xmlns:views="clr-namespace:FreezeBug.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="FreezeBug">

    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="Main"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="Settings" />
        </Tab>
    </FlyoutItem>


</Shell>
